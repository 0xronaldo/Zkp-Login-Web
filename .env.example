# Variables de entorno para ZK Login Web

# Backend URL
REACT_APP_BACKEND_URL=http://localhost:5000

# Infura API Key para WalletConnect
REACT_APP_INFURA_ID=your_infura_project_id_here

# Polygon Amoy Testnet (recomendado para desarrollo)
REACT_APP_DEFAULT_CHAIN_ID=80002

# URLs de RPC personalizadas (opcional)
REACT_APP_AMOY_RPC_URL=https://rpc-amoy.polygon.technology
REACT_APP_POLYGON_RPC_URL=https://polygon-rpc.com

# Direcciones de contratos (se llenarán después del despliegue)
REACT_APP_REGISTER_CONTRACT_ADDRESS=
REACT_APP_VERIFIER_CONTRACT_ADDRESS=

# Modo de desarrollo (para logs adicionales)
REACT_APP_DEBUG=true

# Configuración de privado.id (placeholder)
REACT_APP_PRIVADO_ID_API_KEY=your_privado_id_api_key
REACT_APP_PRIVADO_ID_BASE_URL=https://api.privado.id

# IMPORTANTE: 
# - Nunca comites claves privadas o secretos reales en el repositorio
# - Usa diferentes valores para desarrollo, staging y producción
# - Para producción, configura estas variables en tu plataforma de hosting